<h2>Create project</h2>

<%= form_for (@project) do |f| %>
  <%= render 'layouts/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, :rows => "3" %>
  </div>
  <div>
    <%= f.label :public %>
    <%= f.check_box :public %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Submit", :class => 'btn btn-primary' %>
   </div>
<% end %>

