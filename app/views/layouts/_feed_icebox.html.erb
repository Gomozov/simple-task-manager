<table class="table">
  <thead>                                                                                                  
    <tr><th><i class= "icon-download-alt"></i> Icebox</th></tr>                                            
  </thead>
  <tbody>                                                                                                  
    <% @stories_icebox.each do |story| %>                                                            
      <tr>                                                                                               
        <td>                                                                                             
          <%= image_tag(story.story_type + '.png', :border => 0) %>                                      
          <span class="label label-info pull-right"><%= story.state %></span>
          <%= story.description %><br>                                                                   
          <span class="muted">Author:<%= story.user.name %></span><br>
          <% if story.responsible %>
            <span class="muted">Responsible:<%= story.get_responsible.name %></span><br>
          <% end %>
          <div class="btn-toolbar" style="margin-top: 2px; margin-bottom: 2px">
            <%= link_to new_comment_path(:story_id => story.id), :class => 'btn btn-mini pull-left', :style => "margin-right: 3px" do %>
              <i class= "icon-comment"></i> + <%= story.comments.count %>
            <% end %>
            <%= link_to "start", story_change_state_path(:id => story.id, :new_state => :start), :class => 'btn btn-mini btn-primary pull-right' %>
            <div class="btn-group">
              <%= link_to "#", :class => "btn btn-mini dropdown-toggle", :data => {:toggle => "dropdown"} do %>
                <i class="icon-user"></i>
                <span class="caret"></span>
              <% end %>
              <ul class="dropdown-menu">
                <li><%= link_to story.project.user.name, story_path(:id => story.id, :story => {:responsible => story.project.user.id}), :method => :put %></li>
                <% story.project.members.each do |member| %>
                  <li><%= link_to member.name, story_path(:id => story.id, :story => {:responsible => member.id}), :method => :put %></li>
                <% end %>  
              </ul>  
           </div>
        </div> 
        </td>                                                                                            
      </tr>
    <% end %>                                                                                              
  </tbody>
</table>
